{
    "tsserver.enable": true,
    "tsserver.enableJavascript": true,

    "javascript.format.enabled": true,
    "javascript.showUnused": true,
    "javascript.preferences.quoteStyle": "single",
    "javascript.validate.enable": true,
    "javascript.referencesCodeLens.enable": true,
    "javascript.implementationsCodeLens.enable": true,
    "javascript.suggest.enabled": true,
    "javascript.suggest.names": true,
    "javascript.suggest.paths": true,
    "javascript.suggest.autoImports": true,
    "javascript.suggest.completeFunctionCalls": true,
    "javascript.format.insertSpaceAfterConstructor": false,
    "javascript.format.semicolons": "insert",
    "javascript.format.insertSpaceAfterCommaDelimiter": true,
    "javascript.format.insertSpaceBeforeAndAfterBinaryOperators": true,
    "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
    "javascript.format.insertSpaceAfterSemicolonInForStatements": true,
    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
    "javascript.format.insertSpaceAfterKeywordsInControlFlowStatements": true,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": false,

    "eslint.enable": true,
    "eslint.filetypes": [ "javascript", "javascriptreact", "typescript", "typescriptreact" ],
    "eslint.codeAction.showDocumentation": { "enable": true },
    "eslint.codeAction.disableRuleComment": { "enable": true, "location": "sameLine" },

    "prettier.printWidth": 100,
    "prettier.singleQuote": true,
    "prettier.tabWidth": 2,
    "prettier.semi": true,
    "prettier.endOfLine": "crlf",
    "prettier.useTabs": false,
    "prettier.trailingComma": "es5",
    "prettier.bracketSpacing": true,

    "cSpellExt.enableDictionaries": [ "portuguese-brazilian" ],
    "cSpell.language": "en,pt,pt_BR",
    "cSpell.allowCompoundWords": true,

    "diagnostic.enable": true,
    "diagnostic.messageTarget": "float",
    "diagnostic.enableMessage": "always",
    "diagnostic.checkCurrentLine": true,
    "diagnostic.errorSign": "✘",
    "diagnostic.warningSign": "⚠",
    "diagnostic.infoSign": "➤",
    "diagnostic.hintSign": "➤",
    "diagnostic.refreshOnInsertMode": true,

    "suggest.enablePreview": true,
    "coc.preferences.useQuickfixForLocations": true,
    "codeLens.enable": true,
    "html.autoClosingTags": true,
    "languageserver": {
      "go":{
        "command": "gopls",
        "rootPatterns": ["go.mod"],
        "trace.server": "verbose",
        "filetypes": ["go"]
      }
    }
}
